generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Empresa {
  id    String @id @default(uuid())
  email String @unique
  nome  String @unique
  senha String

  descricao      String?
  descricaoCurta String?
  telefone       String?
  emailContato   String?
  instagram      String?
  tema           String? @default("bumblebee")
  maps           String?

  categorias Categoria[]
  produtos   Produto[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Categoria {
  id   String @id @unique @default(cuid())
  nome String

  produtos Produto[]

  empresaId String
  Empresa   Empresa @relation(fields: [empresaId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Produto {
  id     String @id @default(uuid())
  nome   String 
  preco  String
  imagemUrl String

  categoriaId String
  categoria   Categoria @relation(fields: [categoriaId], references: [id])

  empresaId String
  empresa   Empresa @relation(fields: [empresaId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
